{
    "name": "litgroup/json",
    "description": "Library for JSON encode/decode.",
    "keywords": ["JSON"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Shamritskiy",
            "email": "roman@litgroup.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "LitGroup\\Json\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\LitGroup\\Json\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit --configuration . "
        ],
        "test-coverage-html": [
            "exec phpdbg -qrr vendor/bin/phpunit --configuration=. --coverage-html=build/coverage"
        ],
        "test-ci": [
            "exec phpdbg -qrr vendor/bin/phpunit --configuration=. --colors=never --coverage-text"
        ]
    },
    "archive": {
        "exclude": [
            "/tests",
            "/phpunit.xml.dist",
            "/.travis.yml",
            "/tests.sh",
            ".gitignore"
        ]
    }
}
